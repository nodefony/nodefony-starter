{% extends '../base.html.twig' %}
{{trans_default_domain("documentation")}}

{% block stylesheets %}
  <link rel="stylesheet" href="/documentation-bundle/assets/css/slide.css"/>
  <link rel="stylesheet" href="/documentation-bundle/assets/css/documentation.css"/>
{% endblock %}

{% block body %}

  <div class="reveal nodefony">
    <div class="slides">
      <section>
        <div class="container-fluid text-center">
          <img class="mb-4" src="{{CDN("image")}}/app/images/app-logo.png" alt="">
          <h2>Welcome Users Bundle </h2>
      </div>
      </section>
      <section>
      </section>
    </div>
  </div>

  {% block javascripts %}
    <script type="text/javascript" src="/documentation-bundle/assets/js/documentation.js"></script>
    <script type="text/javascript" src="/documentation-bundle/assets/js/slide.js"></script>
    <script type="text/javascript" src="/documentation/notes.js"></script>
    <script>
    	let link = document.createElement( 'link' );
    	link.rel = 'stylesheet';
    	link.type = 'text/css';
    	link.href = window.location.search.match( /print-pdf/gi ) ? '/documentation-bundle/css/print/pdf.css' : '/documentation-bundle/css/print/paper.css';
    	document.getElementsByTagName( 'head' )[0].appendChild( link );
    </script>
  {% endblock %}

{% endblock %}
