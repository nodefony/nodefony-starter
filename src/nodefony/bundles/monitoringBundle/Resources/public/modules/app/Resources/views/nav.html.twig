	<div class="nav-wrapper">
		<div id="{{ navCssId }}" class="navigation">
			<!-- menu -->
			<span class="block m-t m-b wrap-rl text-xs">{{ "navigation"|trans }}</span>
			<div class="aside-nav">
				
				<div class="list-group">

					<a 
						href="{{ path('dashboard') }}" 
						class="list-group-item font-bold" 
						data-parent="{{ navCssId }}">
						<i class="icon fa fa-th text-success"></i>
						<span>Monitoring</span>
					</a>
					<a 
						href="{{ path('routing') }}" 
