							{% for item in component.element %}
							<a 
								href="{{ path(item['@id']) }}" 
								module="{{ item['@id'] }}"
								class="list-group-item font-bold">
									<i class="icon {{ item['@icon'] }}"></i>
									<span>{{ item["@label"] }}</span>
							</a>
							{% endfor %}
						{% endfor %}
					{% else %}
						{% for component in nav %}
